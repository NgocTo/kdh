@model kdh.ViewModels.PatientProfileVM

@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/PatientPortal.cshtml";
}

<h2>ViewProfile</h2>

<div>
    <h4>PatientProfileVM</h4>
    <div class="row">
        <div class="col-2">
            Name:
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) (@Html.DisplayFor(model => model.Gender))
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            @Html.DisplayNameFor(model => model.HealthCardNumber):
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.HealthCardNumber)
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Address:
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.Address1), 
            @Html.DisplayFor(model => model.Address2), 
            @Html.DisplayFor(model => model.City), 
            @Html.DisplayFor(model => model.Province),
            @Html.DisplayFor(model => model.PostalCode)
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Date of Birth:
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Phone Number:
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.Phone)
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Update Profile", "EditProfile")
</p>

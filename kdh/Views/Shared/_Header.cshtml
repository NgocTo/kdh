    <div class="container-fluid">
        <div class="row p-2 py-3 align-items-center" id="title">
            <div class="col-1">
                    <a href="@Url.Action("Index", "Home")">
                        <img style="width: 100%; height: auto; min-width:40px; max-width:70px;" src="~/Images/LOGO.png" />
                    </a>
            </div>

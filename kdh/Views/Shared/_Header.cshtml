                        <a class="nav-link text-white mr-lg-2" href="#">Foundation</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white mr-lg-2" data-toggle="dropdown" href="#">Contact Us</a>
                        <div class="dropdown-menu blue-background">
                            <a href="@Url.Action("Create", "OnlineConsultationForms")" class="dropdown-item">Online Consultation Form</a>
                            <a href="@Url.Action("Create", "Surveys")" class="dropdown-item">Survey</a>
                            <a href="@Url.Action("Create", "Questions")" class="dropdown-item">Ask Query</a>
                        </div>
                    </li>

                </ul>
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="text" class="form-control form-control-sm" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-light btn-sm" type="button">Go</button>
                        </div>
                    </div>
                </div>
            </div>

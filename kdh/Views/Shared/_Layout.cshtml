<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">	
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body>
<!-- HEADER -->
    <header class="mb-5">
        <div class="container-fluid" id="header">

            <div class="row p-2 pt-3" id="navigation"> 
                <div class="col-1">
                    <div style="width: 50px; height: 50px; background-color: gainsboro;">LOGO</div>
                </div>
                <div class="col-md-7 d-none d-md-block">
                    <h2><a href="#" class="h3 text-white font-weight-bold">Humber and District Hospital</a></h2>
                </div>
                <div class="col-5 col-md-2 offset-1 offset-md-0">
                    <form>
                        <select class="form-control" aria-label="Language">
                            <option>ENG</option>
                            <option>FR</option>
                        </select>
                    </form>
                </div>
                <button class="navbar-toggler  navbar-dark d-block d-md-none" type="button" data-toggle="collapse" data-target="#toggleMenu" aria-controls="toggleMenu"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="col-md-2">
                    <form>
                        <button class="btn btn-danger d-none d-md-block" type="submit">Donate Now</button>
                    </form>
                </div>

            </div> <!-- end of 1st row -->

            <nav class="navbar navbar-expand-md" role="navigation">

                <div class="row col-12 collapse navbar-collapse" id="toggleMenu">
                    <ul class="navbar-nav col-md-9">
                        <li class="nav-item">
                            <a class="nav-link text-white mr-2" href="#">Patient &amp; Visitor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mr-2" href="#">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mr-2" href="#">Career &amp; Volunteering</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mr-2" href="#">Foundation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mr-2" href="#">Contact Us</a>
                        </li>
                    </ul>
                    <div class="col-md-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-outline-light" type="button">Go</button>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

        </div><!-- end of container fluid -->
    </header>

<!-- END OF HEADER-->


    <!-- START OF BODY CONTENT -->
    <div class="container body-content">
        <div class="row">
            <aside class="col-sm-3 bg-light rounded-right">
                <div class="mb-3 mt-2">
@if (User.Identity.IsAuthenticated)
{
    <h3 class="text-dark">Features</h3>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><p class="text-lg-left text-dark">Welcome @User.Identity.Name - @Html.ActionLink("Logout", "Logout", "Home")</p></li>
        
        <li class="list-group-item">@Html.ActionLink("Patient Registration", "Index", "Account")</li>
        <li class="list-group-item">@Html.ActionLink("Jobs", "Jobs")</li>
        <li class="list-group-item">@Html.ActionLink("Frequently Asked Questions", "Index", "FAQ")</li>
        <li class="list-group-item">@Html.ActionLink("Jobs", "Jobs")</li>
        <li class="list-group-item">@Html.ActionLink("Jobs", "Jobs")</li>
        <li class="list-group-item">@Html.ActionLink("Jobs", "Jobs")</li>
        <li class="list-group-item">@Html.ActionLink("Jobs", "Jobs")</li>
        <li class="list-group-item">@Html.ActionLink("Jobs", "Jobs")</li>
        <li class="list-group-item">@Html.ActionLink("Jobs", "Jobs")</li>
        
    </ul>
}
else
{
   @Html.ActionLink("Admin Login", "Login", "Home")
}
 </div>
</aside>
        <main class="col-sm-9">
            @RenderBody()
            <hr />
        </main>
    </div>
</div>

    <div class="container">
        <footer>
            <p>&copy; @DateTime.Now.Year - KDH Project</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    <script src="~/Scripts/jquery.validate.min.js"></script>
    
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

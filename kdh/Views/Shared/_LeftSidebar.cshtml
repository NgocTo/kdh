
@{
    Layout = null;
}

<aside class="col-md-3 bg-light rounded-right">
    <div class="mb-3 mt-2">

        @if (User.Identity.IsAuthenticated) // If user are authorized...
        {
            // Only admin can see the sidebar
            if (User.IsInRole("admin"))
            {
                <h3 class="text-dark">Admin Menu</h3>
                <div class="my-3">@ViewBag.AdminEmail</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.ActionLink("Manage Patient Records", "PatientList", "Admin")</li>
                    <li class="list-group-item">@Html.ActionLink("Job Posting", "JobLogin", "Account")</li>
                    <li class="list-group-item">@Html.ActionLink("Frequently Asked Questions", "Index", "FAQ")</li>
                    <li class="list-group-item">@Html.ActionLink("Testimonials", "Index_Admin", "Testimonial")</li>
                    <li class="list-group-item">@Html.ActionLink("Donations", "Index", "Donation")</li>
                    <li class="list-group-item">@Html.ActionLink("Doctor List", "Index", "Doctor")</li>
                    <li class="list-group-item">@Html.ActionLink("Survey", "Index", "Surveys")</li>
                    <li class="list-group-item">@Html.ActionLink("Online Consultation Form", "Index", "OnlineConsultationForms")</li>
                    <li class="list-group-item">@Html.ActionLink("Questions", "Index", "Questions")</li>
                    <li class="list-group-item text-center"><a href="@Url.Action("Logout", "Account")" class="btn btn-light">Logout</a></li>
                </ul>
            }
            // Only for patient
            else if (User.IsInRole("patient"))
            {
                <h3 class="text-dark">Patient Menu</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.ActionLink("My Profile", "MyProfile", "Patient")</li>
                    <li class="list-group-item">@Html.ActionLink("My Lab Results", "Index", "Patient")</li>
                    <li class="list-group-item">@Html.ActionLink("My Appointments", "Index", "Patient")</li>
                    <li class="list-group-item">@Html.ActionLink("Survey", "Create", "Surveys")</li>
                    <li class="list-group-item">@Html.ActionLink("Online Consultation Form", "Create", "OnlineConsultationForms")</li>
                    <li class="list-group-item text-center"><a href="@Url.Action("Logout", "Account")" class="btn btn-light">Logout</a></li>
                </ul>

            }
            else if (User.IsInRole("hr"))
            {
                <h3 class="text-dark">Job Posting Menu</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.ActionLink("Create new job posting", "Create", "Job")</li>
                    <li class="list-group-item">@Html.ActionLink("See Applicants", "Index_Admin", "JobApplicant")</li>
                    <li class="list-group-item">@Html.ActionLink("Doctor List", "Index", "Doctor")</li>
                    <li class="list-group-item text-center"><a href="@Url.Action("JobLogout", "Account")" class="btn btn-lght">Logout</a></li>
                </ul>
            }

        }
        // this is for public view (not authorized user)
        else
        {
            <h3 class="text-dark">Quick Links</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><a href="#">Location and Hours</a></li>
                <li class="list-group-item"><a href="#">Services</a></li>
                <li class="list-group-item"><a href="#">Online Gift Shop</a></li>
                <li class="list-group-item">@Html.ActionLink("Donations", "MakeDonation", "Donation")</li>
                <li class="list-group-item">@Html.ActionLink("Doctors", "PublicView", "Doctor")</li>
                <li class="list-group-item">@Html.ActionLink("Survey", "Create", "Surveys")</li>
                <li class="list-group-item">@Html.ActionLink("Online Consultation Form", "Create", "OnlineConsultationForms")</li>
            </ul>
        }

    </div>
</aside>
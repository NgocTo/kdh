@model  IEnumerable<kdh.Models.DonationContact>
@{
    ViewBag.Title = "FindDonors";
    Layout = "~/Views/Shared/FAQDonation/_FaqDonation.cshtml";
}

<h2 class="text-center text-dark">Donations</h2>
<h3 class="text-dark mb-3">List of Donors</h3>

<div class="mb-2 container">
    <div class="row">
        <a href="@Url.Action("Create", "Donation")" class="btn btn-primary my-3 mr-4">Create New Donor</a>
        <a href="@Url.Action("Index", "Donation")" class="btn btn-primary my-3 mr-4">List of All Donors</a>
        @using (Html.BeginForm("FindDonors", "Donation"))
            {
            @Html.AntiForgeryToken()
            <div class="input-group offset-8">
                @Html.TextBox("DonorName", null, new { @class = "form-control my-3 py-2 border-right-0 border border-dark" })
                <span class="input-group-append  my-3">
                    <input type="submit" aria-labelledby="search button" value="Go" class="btn bg-primary text-white border-left-0 border border-dark">
                </span>
            </div>
        }
    </div>
    <div class="text-danger mb-4 offset-8">@ViewBag.SearchError @ViewBag.CountResult</div>

</div>
@foreach (var item in Model)
{
    <div class="card mb-3">
        <div class="card-header bg-light">
            <span class="h5 text-primary font-weight-bold">
                @Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)
            </span>
        </div>
        <div class="card-body">
            <div class="card-text">
                <span class="font-weight-bold text-primary">@Html.DisplayNameFor(model => model.DonorId):</span>
                @Html.DisplayFor(modelItem => item.DonorId)
            </div>
            <div class="card-text">
                <span class="font-weight-bold text-primary">@Html.DisplayNameFor(model => model.Amount):</span>
                @Html.DisplayFor(modelItem => item.Amount)
            </div>
            <div class="card-text">
                <span class="font-weight-bold text-primary">@Html.DisplayNameFor(model => model.Phone):</span>
                @Html.DisplayFor(modelItem => item.Phone)
            </div>
            <div class="card-text">
                <span class="font-weight-bold text-primary">@Html.DisplayNameFor(model => model.Email):</span>
                <span class="text-dark"> @Html.DisplayFor(modelItem => item.Email)</span>
            </div>


            <a href="@Url.Action("Details", "Donation", new { id = item.DonorId })" class="btn btn-outline-primary btn-sm ml-2 my-1 col-md-3">Details</a>
            <a href="@Url.Action("Edit", "Donation", new { id = item.DonorId })" class="btn btn-outline-primary btn-sm ml-2 my-1 col-md-3">Edit</a>
            <a href="@Url.Action("Delete", "Donation", new { id = item.DonorId })" class="btn btn-outline-primary btn-sm ml-2 my-1 col-md-3">Delete</a>

        </div>
    </div>

}


